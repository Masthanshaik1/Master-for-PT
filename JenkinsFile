pipeline {
    agent any
    stages {
        stage('Run JMeter Tests') {
            steps {
                script {
                    bat """
                    docker run --rm ^
                        -v "%WORKSPACE%:/tests" ^
                        jmeter-with-plugins ^
                        /opt/apache-jmeter-5.6.3/bin/jmeter ^
                        -n -t /tests/AB_ACCOUNT_STATEMENT_F.jmx ^
                        -l /tests/results.jtl
                    """
                }
            }
        }
        stage('Archive Results') {
            steps {
                archiveArtifacts artifacts: 'results.jtl', fingerprint: true
            }
        }
    }
}
