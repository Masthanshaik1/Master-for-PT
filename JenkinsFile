pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Run JMeter Test') {
            steps {
                bat '''
                docker run --rm ^
                -v %WORKSPACE%:/test ^
                jmeter-with-plugins ^
                jmeter -n -t /test/webtours1610.jmx -l /test/results.jtl
                '''
            }
        }

        stage('Archive Results') {
            steps {
                archiveArtifacts artifacts: 'results.jtl', onlyIfSuccessful: false
            }
        }
    }
}
