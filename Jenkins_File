pipeline {
    agent any

    environment {
        IMAGE_NAME = 'jmeter-with-plugins'
        TEST_REPO  = 'https://github.com/Masthanshaik1/Master-for-PT.git'
    }

    stages {

        stage('Checkout Tests') {
            steps {
                git branch: 'main',
                    credentialsId: 'GitHub-PAT',
                    url: "${TEST_REPO}"
            }
        }

        stage('Run JMeter Tests') {
            steps {
                script {
                    bat """
                    docker run --rm ^
                      -v "%WORKSPACE%:/tests" ^
                      ${IMAGE_NAME} ^
                      /opt/apache-jmeter-5.6.3/bin/jmeter ^
                      -n ^
                      -t /tests/JMX/AB_ACCOUNT_SUMMARY_F.jmx ^
                      -l /tests/results.jtl ^
                      -e -o /tests/report
                    """
                }
            }
        }

        stage('Archive Results') {
            steps {
                archiveArtifacts artifacts: 'results.jtl, report/**', allowEmptyArchive: true
            }
        }

        stage('Push Results to GitHub') {
            steps {
                withCredentials([
                    usernamePassword(
                        credentialsId: 'GitHub-PAT',
                        usernameVariable: 'GIT_USER',
                        passwordVariable: 'GIT_PASS'
                    )
                ]) {
                    bat """
                    git config user.email "masthan.shaik@spectravisionit.com"
                    git config user.name "Masthanshaik1"

                    git pull https://%GIT_USER%:%GIT_PASS%@github.com/Masthanshaik1/Master-for-PT.git main

                    if not exist results mkdir results

                    set BUILD_NUM=%BUILD_NUMBER%
                    copy /Y results.jtl results\\results_%BUILD_NUM%.jtl
                    xcopy /E /I /Y report results\\report_%BUILD_NUM%

                    git add results\\

                    git commit -m "Automated: Add latest JMeter results for build #%BUILD_NUM%" || echo Nothing to commit

                    git push https://%GIT_USER%:%GIT_PASS%@github.com/Masthanshaik1/Master-for-PT.git main
                    """
                }
            }
        }
    }
}

